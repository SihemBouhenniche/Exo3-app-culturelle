<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CardDetails">

    <TextView
            android:text="Title film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent" android:textSize="30sp"
            android:textColor="@color/colorAccent"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="148dp" app:srcCompat="@drawable/film4"
            android:id="@+id/photo2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/title2"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/description2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/photo2"
            android:padding="10dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rate2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>